
@model Hands.ViewModels.Models.Events.Event

@{
    ViewBag.Title = "Events";
}

<style>
    .popup {
        position: fixed;
        background: #5f5f5f8c;
        width: 100%;
        padding-left: 30%;
        top: 0;
        padding-top: 21%;
        height: 274%;
    }

    .m-footer {
        display: none
