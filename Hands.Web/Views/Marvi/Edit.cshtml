                            //items += "<option selected='" + UnionCounil.Selected +"' value='" + UnionCounil.Value + "'>" + UnionCounil.Text + "</option>";
                            //$("#TaluqaId").append('<option value="' + Taluqa.Value + '">' +
                            //    Taluqa.Text + '</option>');
                            // here we are adding option for States

                        });

                    $('#UnionCouncilId').html(items);
