                            optionHtml = optionHtml.replace('{value}', UnionCounil.Value);
                            optionHtml = optionHtml.replace('{text}', UnionCounil.Text);
                            optionHtml = optionHtml.replace('{selected}', (UnionCounil.Selected == true ? "selected='selected'" : ""));

