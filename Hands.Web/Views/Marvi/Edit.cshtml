                },
                error: function(ex) {


                    var items = '<option>Select</option>';
                    $('#UnionCouncilId').html(items);
                }
            });
            return false;
        } else {
            var items = '<option>Select</option>';
            $('#UnionCouncilId').html(items);
        }

    }


